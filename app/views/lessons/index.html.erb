<h1>Listing Lessons</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Number</th>      
      <th>Word count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.number %></td>
        <td><%= lesson.my_dictionaries.count %></td>
        <td><%= link_to 'Dictionary', lesson_my_dictionaries_path(lesson), class: "btn-sm btn-info" %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson), class: "btn-sm btn-info" %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h3>All words = <%=all_words%></h3>
